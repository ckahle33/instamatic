<div class="thumbnails">
  <% @feed.each do |image| %>
  <div class="modal fade" id="image-<%= image.id %>" tabindex="-1" role="dialog" aria-labelledby="image-<%= image.id %>-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="image-<%= image.id %>-label"><%= image.user.username %></h4>
        </div>
        <div class="modal-body">
          <%= image_tag image.images.standard_resolution.url, class: "image_card" %>
        </div>
        <div class="modal-footer">
          Likes: <%= image.likes.count %>
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <div class="figure">
    <a href="#" data-toggle="modal" data-target="#image-<%= image.id %>">
      <%= image_tag image.images.low_resolution.url, class: "image_card" %>
    </a>
  </div>
  <% end %>
</div>