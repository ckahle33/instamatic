<!DOCTYPE html>
<html>
<head>
  <title>Instamatic</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  
  <div class="container">
    <%= render 'layouts/menu' %>
  </div>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
